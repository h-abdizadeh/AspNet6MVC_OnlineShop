@model IEnumerable<OnlineShop.Models.Group>

@{
    ViewData["Title"] = "لیست گروه ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>لیست گروه ها</h1>

<p>
    <a  class="text-decoration-none btn btn-outline-success rounded-5" asp-action="Create"><span class="fa fa-plus"></span> ثبت گروه جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotShow)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @* @Html.DisplayFor(modelItem => item.Img)*@

                    @if (!string.IsNullOrEmpty(item.Img))
                    {
                              <img src="~/image/group/@item.Img" width="100" >
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotShow)
                </td>
                <td>
                    <a class="text-decoration-none text-warning" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit"></span> ویرایش</a> |
                    <a class="text-decoration-none text-info" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-info"></span> جزییات</a> |
                    <a class="text-decoration-none btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span> حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
